{
  "name": "shipping-service-api",
  "version": "1.0.0",
  "description": "..",
  "main": "dist/server.js",
  "scripts": {
    "preinstall": "check-node-version --node 14 --npm 7",
    "watch-server": "nodemon --watch src -e ts,tsx --exec ts-node src/server.ts",
    "build-ts": "tsc",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "clean:dist": "rm -rf dist",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet",
    "serve": "node dist/server.js",
    "build": "npm run build-ts && npm run copy-static-assets",
    "start": "npm run serve",
    "test": "npm run lint && npm run test:silent",
    "test:silent": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "test:update": "jest --forceExit --coverage --verbose --detectOpenHandles --update-snapshot",
    "watch-test": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  },
  "author": "Valienta",
  "homepage": "",
  "repository": "",
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.9.0",
    "@types/koa": "2.0.49",
    "@types/koa__cors": "^3.0.2",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.0.42",
    "@types/node": "^12.19.8",
    "@types/shelljs": "^0.8.0",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.5",
    "jest": "^25.1.0",
    "nodemon": "^1.19.1",
    "shelljs": "^0.8.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^8.3.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@newrelic/winston-enricher": "^0.1.1",
    "@types/newrelic__winston-enricher": "^0.1.1",
    "@types/uuid": "^8.3.0",
    "axios": "^0.21.1",
    "check-node-version": "^4.1.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "http-status-codes": "^1.4.0",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.2.0",
    "koa-parameter": "^3.0.1",
    "koa-router": "^7.4.0",
    "newrelic": "^7.4.0",
    "pg": "8.5.1",
    "swagger2": "^2.0.0",
    "swagger2-koa": "^2.0.0",
    "typeorm": "^0.2.32",
    "typescript": "^3.7.5",
    "uuid": "^8.3.1",
    "winston": "^3.2.1"
  }
}
